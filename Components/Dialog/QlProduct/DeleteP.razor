@using BanSach.Components.IService
@using BanSach.Components.Services
@using BanSach.Components.Model
@inject IDialogService DialogService
@inject NavigationManager navigationManager
@inject IItemManagement ItemManagement
@inject HttpClient httpClient
@rendermode InteractiveServer
@inject IDialogService DialogService
<MudDialog>
    <TitleContent>
        Thông báo
    </TitleContent>
    <DialogContent>
        Bạn có muốn xóa sản phẩm này không?
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cancel">Cancel</MudButton>
        <MudButton style="color:red" OnClick="DeleteProduct">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public Product product { get; set; } = new Product();

    private void Cancel() => MudDialog!.Cancel();

    private void DeleteProduct()
    {

        MudDialog!.Close(DialogResult.Ok(product));
        navigationManager.NavigateTo("/Ql/product");
    }
}


