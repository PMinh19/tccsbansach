@using BanSach.Components.IService
@using BanSach.Components.Services
@using BanSach.Components.Model
@inject IDialogService DialogService
@inject IItemManagement ItemManagement
@rendermode InteractiveServer
<MudDialog style="width:500px">
    <TitleContent>
        <MudText Typo="Typo.h6" style="text-align:center">          
           -- Update User! --
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Label="Tên đăng nhập "
                      @bind-Value="User.Username" />
        <MudTextField Label="Mật khẩu" Class="mt-3"
                      @bind-Value="User.Password" />
        <MudTextField Label="SĐT" Class="mt-3"
                      @bind-Value="User.Phone" />
        <MudTextField Label="Email" Class="mt-3"
                      @bind-Value="User.Email" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="UpdateUser">Update</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    public MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public User User { get; set; } = new User();

    private void Cancel() => MudDialog!.Cancel();

    private void UpdateUser()
    {

        MudDialog!.Close(DialogResult.Ok(User.UserId));
    }

}
